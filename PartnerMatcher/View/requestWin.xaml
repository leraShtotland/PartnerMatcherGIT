<Window x:Class="PartnerMatcher.View.requestWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartnerMatcher.View"
        mc:Ignorable="d"
        Title="requestWin" Height="300" Width="300">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/pics/imagereq.jpg" Stretch="UniformToFill" Opacity="0.3" AlignmentY="Top"/>
        </Grid.Background>
        <TextBox x:Name="textBoxreq" HorizontalAlignment="Left" Height="107" Margin="27,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="239" RenderTransformOrigin="0.5,0.5"/>
        <Label x:Name="label" Content="add content request " HorizontalAlignment="Left" Margin="65,21,0,0" VerticalAlignment="Top" Height="25" Width="158" FontWeight="Bold"/>
        <Button x:Name="button" Content="Add" HorizontalAlignment="Left" Margin="202,213,0,0" VerticalAlignment="Top" Width="80" Height="38" Click="button_Click"/>
    </Grid>
</Window>
